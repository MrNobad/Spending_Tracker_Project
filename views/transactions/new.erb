<h1>New Transaction</h1>
<table class="center">
  <th>
  <form action="/transactions" method="post">
    <label for="date-time">Date: </label>
    <input type="date" placeholder="DD/MM/YYYY" name="date_time" id="date_time" required>
    <br>
    <label>
      Select a Merchant:
      <select name="merchant_id">
        <% for merchant in @merchants %>
        <option value="<%= merchant.id %>"><%= merchant.name %></option>
        <% end %>
      </select>
    </label>
    <br>
    <label>
      Select Type of Transaction:
      <select name="tag_id">
        <% for tag in @tags %>
        <option value="<%= tag.id %>"><%= tag.type %></option>
        <% end %>
      </select>
      <br>
      <label for="amount">Transaction Amount: Â£</label>
      <input type="number" palceholder="0.00" step="0.01" name="amount" id="amount" required>
      <br>
      <input class="btn" type='submit' value='Add Transaction'>
    </form>
    </th>
  </table>
